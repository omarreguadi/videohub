{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block body %}
    {% if not error is empty %}
        <div class="container-fluid col-6 text-center mt-3 alert alert-danger" role="alert">
            <span>Mot de passe ou adresse mail incorrect !</span>
        </div>
    {% endif %}
    <div class="container-fluid col-2 text-center mt-4">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.email, {'attr': {'class': 'form-control text-center'}}) }}
            {{ form_errors(form.email, {'attr': {'class': 'form-control text-center'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password, {'attr': {'class': 'form-control text-center'}}) }}
            {{ form_errors(form.password, {'attr': {'class': 'form-control text-center'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.connect, {'attr': {'class': 'form-control btn btn-danger'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}





