{% extends 'base.html.twig' %}

{% block title %}All Video{% endblock %}
{% block body %}
    <div class="container-fluid col-6 text-center mt-4">
        <h1 class="mt-3" style="color: black;">All Videos</h1>
        {% for user in users %}
            <div class="form-group mt-2">
                <h1 style="color: #ee6e70;">{{ user.firstname }}</h1>
            </div>
            {% for video in user.videos %}
                {% if video.published == 1 %}
                    <div class="form-group mt-3">
                        <iframe width="560" height="315" src="{{ video.url }}" frameborder="0"
                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                    </div>
                    <div class="form-group">
                        <a href="{{ path('detail_video', { 'id': video.id }) }}">{{ video.title }}</a>
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}